<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tw__composer_deep_gray"
    android:padding="16dp">


    <EditText
        android:id="@+id/edit_text_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/twitter_login_button"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/tw__composer_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_login_main" />

    <EditText
        android:id="@+id/edit_text_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_login_email"
        android:layout_alignEnd="@+id/edit_text_login_email"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/tw__composer_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_login_email" />


    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_signin_button"
        android:layout_width="126dp"
        android:layout_height="34dp"
        android:layout_alignEnd="@+id/twitter_login_button"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="32dp"
        android:freezesText="true"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/twitter_login_button"
        app:layout_constraintStart_toStartOf="@+id/text_view_login_register"
        app:layout_constraintTop_toBottomOf="@+id/button_login"></com.google.android.gms.common.SignInButton>

    <Button
        android:id="@+id/button_login"
        android:layout_width="86dp"
        android:layout_height="26dp"
        android:layout_alignEnd="@+id/edit_text_login_email"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:background="@android:color/holo_red_light"
        android:text="@string/login"
        android:textColor="@color/tw__composer_white"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_login_password"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_login_password" />

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/twitter_login_button"
        android:layout_width="122dp"
        android:layout_height="26dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Button"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/button_login"
        app:layout_constraintTop_toBottomOf="@+id/button_login" />

    <ImageView
        android:id="@+id/imageViewReg"
        android:layout_width="175dp"
        android:layout_height="124dp"
        android:layout_alignStart="@+id/google_signin_button"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/timesheet" />

    <TextView
        android:id="@+id/text_view_login_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_text_login_password"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Login"
        android:textColor="@color/tw__composer_white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewReg" />

    <TextView
        android:id="@+id/text_view_login_register"
        android:layout_width="155dp"
        android:layout_height="17dp"
        android:layout_marginStart="4dp"
        android:text="SIGN UP"
        android:textColor="@color/tw__composer_white"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_login"
        app:layout_constraintStart_toStartOf="@+id/edit_text_login_password" />

</android.support.constraint.ConstraintLayout>


