<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".project.MaintainProject">

    <TextView
        android:id="@+id/text_view_project_name_mp"
        android:layout_width="320dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Project" />

    <TextView
        android:id="@+id/text_view_proj_loc_mp"
        android:layout_width="320dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_project_name_mp"
        tools:text="Location" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_mp"
        android:layout_width="320dp"
        android:layout_height="456dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_proj_loc_mp" />

    <Button
        android:id="@+id/button_add_emplyee_mp"
        android:layout_width="63dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_button"
        android:text="@string/add_emp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/recycler_view_mp"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_mp" />


</android.support.constraint.ConstraintLayout>