<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tw__composer_deep_gray"
    tools:context=".user.UserProfileActivity"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/textview_employee"
        android:layout_width="329dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:text="Employee Profile"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_employer" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView2"
        android:layout_width="92dp"
        android:layout_height="94dp"
        android:src="@drawable/home"
        app:layout_constraintBottom_toBottomOf="@+id/textview_employee"
        app:layout_constraintStart_toStartOf="@+id/textview_employee"
        app:layout_constraintTop_toTopOf="@+id/textview_employee"
        app:layout_constraintVertical_bias="0.0" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="89dp"
        android:layout_height="92dp"
        android:src="@drawable/home"
        app:layout_constraintBottom_toBottomOf="@+id/textview_employer"
        app:layout_constraintStart_toStartOf="@+id/textview_employer"
        app:layout_constraintTop_toTopOf="@+id/textview_employer"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textview_employer"
        android:layout_width="329dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Employer Profile"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>